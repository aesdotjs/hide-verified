{
  "manifest_version": 3,
  "name": "Hide Verified Tweets",
  "description": "This extension hides tweets from verified users on Twitter.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon_128.png"
  }
}